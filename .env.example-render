# RADHA API Environment Variables
# कृपया इस फाइल की एक कॉपी बनाकर उसे .env नाम दें और अपने स्वयं के मूल्य भरें

# डेटाबेस कनेक्शन
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/radhaapi?retryWrites=true&w=majority

# प्रमाणीकरण
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRY=7d

# सर्वर कॉन्फिगरेशन
PORT=8080
NODE_ENV=production

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# CORS कॉन्फिगरेशन
CORS_ORIGIN=https://www.radhaapi.me

# फ्रंटएंड URL (यदि अलग से होस्ट किया गया है)
FRONTEND_URL=https://www.radhaapi.me

# डोमेन कॉन्फिगरेशन
DOMAIN=radhaapi.me
API_SUBDOMAIN=api.radhaapi.me
WWW_SUBDOMAIN=www.radhaapi.me
