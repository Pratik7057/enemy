{
  "name": "RadhaAPI Python Backend",
  "description": "FastAPI backend for RadhaAPI YouTube Audio Streaming platform",
  "repository": "https://github.com/your-username/radhaapi-backend",
  "website": "https://www.radhaapi.me",
  "keywords": ["python", "fastapi", "youtube", "audio", "streaming", "yt-dlp"],
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "ENVIRONMENT": {
      "description": "Environment mode",
      "value": "production"
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string from MongoDB Atlas",
      "required": true
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token generation",
      "generator": "secret"
    },
    "YOUTUBE_API_KEY": {
      "description": "YouTube Data API v3 key from Google Cloud Console",
      "required": true
    },
    "CORS_ORIGIN": {
      "description": "Allowed CORS origin URL",
      "value": "https://www.radhaapi.me"
    },
    "PORT": {
      "description": "Port number for the server",
      "value": "5000"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "scripts": {
    "postdeploy": "echo 'Platform deployment completed successfully!'"
  }
}
